<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Product"
            android:textSize="24sp"
            android:textColor="@color/retro_brown"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Product Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name *"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price *"
                android:inputType="numberDecimal"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Original Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOriginalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Original Price (Optional)"
                android:inputType="numberDecimal"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description *"
                android:lines="3"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Image URL -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etImageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Image URL *"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category *"
            android:textColor="@color/retro_brown"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/retro_gradient_bg" />

        <!-- Condition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condition *"
            android:textColor="@color/retro_brown"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/retro_gradient_bg" />

        <!-- Size -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Sizes *"
            android:textColor="@color/retro_brown"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/retro_gradient_bg" />

        <!-- Seller -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seller (Optional)"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rating -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rating (0-5)"
                android:inputType="numberDecimal"
                android:text="4.0"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Review Count -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/retro_brown"
            app:boxStrokeColor="@color/retro_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReviewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Review Count"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/retro_brown" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Featured Checkbox -->
        <CheckBox
            android:id="@+id/cbFeatured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured Product"
            android:textColor="@color/retro_brown"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginEnd="8dp"
                android:background="@color/retro_gray"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Product"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_retro_style"
                android:textColor="@color/retro_cream" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Required fields"
            android:textSize="12sp"
            android:textColor="@color/retro_gray"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>