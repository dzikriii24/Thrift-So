<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Products"
        android:textSize="24sp"
        android:textColor="@color/retro_brown"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10px"
        android:paddingTop="20px"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvEmptyProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No products available\nTap + to add your first product!"
        android:textSize="18sp"
        android:textColor="@color/retro_gray"
        android:gravity="center"
        android:layout_marginTop="50px"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140px"
        android:layout_below="@id/tvEmptyProducts" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/retro_orange"
        android:contentDescription="Add Product" />

</RelativeLayout>